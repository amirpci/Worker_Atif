<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Share_knowledge">
    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/problem_desc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="type problem description here!"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_photos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Photos"/>
            <Button
                android:id="@+id/add_videos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Videos"/>
        </LinearLayout>
        <Button
            android:id="@+id/add_new_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Problem"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>